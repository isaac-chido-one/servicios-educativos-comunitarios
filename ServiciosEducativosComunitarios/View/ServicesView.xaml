<Window x:Class="ServiciosEducativosComunitarios.View.ServicesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiciosEducativosComunitarios.View"
        mc:Ignorable="d"
        Title="Servicios educativos" 
        Height="330" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Content="Servicio educativo"></Label>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" Content="Clave"></Label>
            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" Content="Comunidad"></Label>

            <TextBox Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,0" MaxLines="1" Name="TxtCode"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0" MaxLines="1" Name="TxtLocality"></TextBox>
            <Label Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,10,0" Content="Achoquen, Apozol"></Label>

            <Label Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Content="Programa"></Label>
            <Label Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Content="Ciclo escolar"></Label>
            <Label Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Content="Estatus"></Label>

            <ComboBox Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,20,0" Name="ComboProgram">
                <ComboBoxItem IsSelected="True">Seleccionar ...</ComboBoxItem>
                <ComboBoxItem>01 Preescolar</ComboBoxItem>
                <ComboBoxItem>02 Primaria</ComboBoxItem>
                <ComboBoxItem>03 Secundaria</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,20,0" Name="ComboPeriod">
                <ComboBoxItem>2028-2029</ComboBoxItem>
                <ComboBoxItem>2027-2028</ComboBoxItem>
                <ComboBoxItem>2026-2027</ComboBoxItem>
                <ComboBoxItem IsSelected="True">2025-2026</ComboBoxItem>
                <ComboBoxItem>2024-2025</ComboBoxItem>
                <ComboBoxItem>2023-2024</ComboBoxItem>
                <ComboBoxItem>2022-2023</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,20,0" Name="ComboStatus">
                <ComboBoxItem IsSelected="True">Activo</ComboBoxItem>
                <ComboBoxItem>Baja</ComboBoxItem>
                <ComboBoxItem>Clausura</ComboBoxItem>
                <ComboBoxItem>Reapertura</ComboBoxItem>
            </ComboBox>
        </Grid>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Margin="10" Padding="10" Name="BtnCancel" Click="BtnCancel_Click">Cancelar</Button>
            <Button Margin="10" Padding="10" Name="BtnStore">Guardar</Button>
        </WrapPanel>
    </Grid>
</Window>
